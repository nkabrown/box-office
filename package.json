{
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@web/dev-server": "^0.1.35",
    "@web/test-runner": "^0.15.0",
    "browserslist": "^4.21.4",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3",
    "typescript-lit-html-plugin": "^0.9.0",
    "wireit": "^0.8.0"
  },
  "dependencies": {
    "lit": "^2.4.1"
  },
  "scripts": {
    "copy": "wireit",
    "dev": "concurrently \"npm run copy --watch\" \"npm run ts --watch\" \"npm run start\" ",
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --ignore-path .gitignore \"**/*.{js,mjs,ts,html}\" --fix",
    "format:prettier": "prettier --ignore-path .gitignore --write .",
    "lint": "npm run lint:eslint & npm run lint:prettier",
    "lint:eslint": "eslint --ignore-path .gitignore \"**/*.{js,mjs,ts,html}\"",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "prepare": "husky install",
    "start": "wds",
    "test": "wtr",
    "ts": "wireit"
  },
  "wireit": {
    "copy": {
      "command": "copyfiles -u 1 'src/**/*.css' src/index.html lib/",
      "files": [
        "src/**/*.css",
        "src/index.html"
      ],
      "output": [
        "lib/**/*.css",
        "lib/index.html"
      ]
    },
    "ts": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib/**/*.js"
      ]
    }
  },
  "lint-staged": {
    "*.{js,mjs,ts,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,json,md,yaml}": "prettier --write"
  }
}
